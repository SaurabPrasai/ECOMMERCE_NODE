<%- include('includes/header') %> <%- include('includes/navbar') %>

<div
  style="
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 30px;
    min-height: 80vh;
  "
  class="d-flex flex-column flex-sm-row  "
>
  <div  style="padding: 10px;" >
    <img src=<%= product.image%> style="height: 300px;width: 400px;
    border-radius:10px" alt="">
    
  </div>
  <div  style="padding-left:50px;">
    <p style="width: 400px; font-size: 18px;" ><%= product.description %></p>
    <p style="font-size: 20px; font-weight: bold"><%= product.name %></p>

    <p style="font-size: 20px; font-weight: bold">Rs.<%= product.price %></p>
    <% if(user) {%>
        <a href="/add-to-cart/<%= product._id  %>"class="btn " style="background-color: aqua;">Add to Cart</a>
    <% } %>
  </div>
</div>

<%- include('includes/footer') %>
